<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tw_name"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="EVENT"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_detail_name"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:text="sampleNAME"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tw_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_detail_club"
        android:layout_width="339dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="sampleCLUB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_detail_name" />

    <TextView
        android:id="@+id/event_detail_topic"
        android:layout_width="231dp"
        android:layout_height="56dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:text="sampleTOPIC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_detail_club" />

    <TextView
        android:id="@+id/tw_topic"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Topic - "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_detail_club" />

    <TextView
        android:id="@+id/tw_date"
        android:layout_width="77dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="Date - "
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_topic" />

    <TextView
        android:id="@+id/event_detail_date"
        android:layout_width="219dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="244dp"
        android:text="sampleDATE"
        app:layout_constraintStart_toEndOf="@+id/tw_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tw_location"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="Location -"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_detail_date" />

    <TextView
        android:id="@+id/event_detail_location"
        android:layout_width="219dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="sampleLOCATION"
        app:layout_constraintStart_toEndOf="@+id/tw_location"
        app:layout_constraintTop_toBottomOf="@+id/event_detail_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
